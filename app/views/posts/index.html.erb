<h1>Posts</h1>
<div>



  <% @posts.each do |post| %>

    <div class="card" style="width: 100%; margin-bottom: 1rem;">
      <p class="badge bg-secondary" style="margin-top: 5px;">
        User: <%= post.user.name %>
        <%= link_to 'Profile', post.user%>
      </p>

      <%= image_tag(post.image.url, width: '100%', height: '40%') if post.image.url %>
      <div class="card-body">
        <h5 class="card-title"></h5>
        <p class="card-text"><%= post.content %></p>
        <% if current_user.id != post.user_id %>
          <%if is_favorite?(post.id, current_user)  %>
            <%= link_to ' Add to favorites', favorite_path(id: @favorites.find_by(post_id: post.id)), method: :delete,class: 'btn btn-primary' %>

          <% else %>
            <%= link_to ' Delete from favorites ', favorites_path(post_id: post.id), method: :post, class: 'btn btn-danger' %>

          <% end %>
        <% end %>
        <% if current_user.id == post.user_id %>
          <%= link_to 'Show', post, class: "btn btn-info", style: "color: white;" %>
          <%= link_to 'Edit', edit_post_path(post), class: "btn btn-primary" %>
          <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", style: "color: white;" %>

        <% end %>
      </div>

    </div>


  <%end %>


  <div style="margin-top: 1.5rem;">
    <%= link_to 'New Post', new_post_path, class: "btn btn-success", style: "color: white;" %>
  </div>
</div>