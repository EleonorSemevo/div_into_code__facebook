

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.image.url %></td>
        <td><%= post.user.name %></td>
        <td><%= link_to 'Show', post, class: "btn btn-info", style: "color: white;" %></td>
        <% if current_user.id == post.user_id %>
          <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-primary" %></td>
          <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", style: "color: white;" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-success", style: "color: white;" %>
