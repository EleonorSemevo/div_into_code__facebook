<h1>Posts</h1>
<div>

  <% @favorites_posts.each do |post| %>
    <p class="badge bg-secondary" style="margin-top: 5px;">
      User: <%= post.user.name %>
    </p>

    <p>
      <%= image_tag post.image.url if post.image.url %>
    </p>
    <p style="text-align: justify;">
      <%= post.content %>
    </p>

      <%= link_to 'Show', post, class: "btn btn-info", style: "color: white;" %>
        <%= link_to ' Retirer aux favoris', favorite_path(id: @favorites.find_by(post_id: post.id)), method: :delete,class: 'btn tbn primary' %>
        <p>Retirer des favoris</p>

  <%end %>


  <div style="margin-top: 1.5rem;">
    <%= link_to 'Posts', posts_path, class: "btn btn-success", style: "color: white;" %>
  </div>
</div>